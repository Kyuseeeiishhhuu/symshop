{% extends 'base.html.twig' %}

{% block title %}BACKOFFICE - Gestion des avis!{% endblock %}

{% block body %}

    <h1 class="display-4 text-center bg-primary col-md-7 mx-auto my-5">
    BACKOFFICE - Gestion des avis
    </h1>

    <div style="max-height: 50vh !important; overflow:auto;" class="container text-center">

        {% for a in avis %}
            
            <div class="mx-auto alert alert-dark">
                <h5 class="text-center bg-dark text-warning">
                Avis du produit : {{ a.produit.nom}}
                 id :{{ a.produit.id}}
                </h5>
                <hr>
			    <span>
				    <strong>{{ a.auteur}}</strong>
			    </span>
			    <small class="fs-italic">
				Poste le {{ a.createdAt|date('d/m/Y')}} a {{ a.createdAt|date('H:i:s')}}
			    </small>
			    <p class="text-center">
				{{ a.contenu}}
			    </p>
			    <hr>
                <div class="text-center">
                    <a href="{{ path("app_admin_avis_edit", {'id' : a.id} ) }}" class="btn btn-sm btn-warning">
                    <i class="fa-solid fa-pen"></i>
                    </a>

                    <a onclick="return(confirm('Etes-vous certain de vouloir suprimer cet avis ?'))" href="{{ path("app_admin_avis_del", {'id' : a.id} ) }}"class="btn btn-sm btn-danger">
                    <i class="fa-solid fa-trash"></i>
                    </a>

                    <a href="{{ path("app_admin_avis_detail", {'id' : a.id} ) }}"class="btn btn-sm btn-info">
                    <i class="fa-solid fa-eye"></i>
                    </a>

                </div>
		    </div>

        {% endfor %}

        
    </div>
    <div class="mx-auto text-center">
    
        <a href="{{ path("app_admin") }}" class="btn btn-sm btn-primary mx-auto">Accueil BackOffice</a>

    </div>
    

{% endblock %}
