{% extends 'base.html.twig' %}

{% block title %}BACKOFFICE - Gestion des avis!{% endblock %}

{% block body %}

<div class="container ">

    <div class="mx-auto alert alert-dark my-5">
        <h5 class="text-center bg-dark text-warning">
            Avis du produit : {{ avis.produit.nom}}
            id :{{ avis.produit.id}}
        </h5>
        <hr>
		<span>
		<strong>{{ avis.auteur}}</strong>
		</span>
		<small class="fs-italic">
			Poste le {{ avis.createdAt|date('d/m/Y')}} a {{ avis.createdAt|date('H:i:s')}}

            <i class="fs-italic">avis id nÂ° {{avis.id}}
            </i>
        
		</small>
		<p class="text-center">
