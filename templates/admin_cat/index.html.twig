{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}

<div class="container my-5">

    <h2 class="text-center text-white bg-primary mx-automy-2">Liste des categories</h2>

    <div class="row justify-content-center">

        <a href="{{ path('app_admin_cat_new') }}" class="btn btn-primary col-md-7 col-lg-5">Ajouter une categorie</a>

    </div>

    <table class="table table-striped table-reponsive-sm col-md-7 col-lg-5 col-10">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.nom }}</td>
                <td>{{ categorie.slug }}</td>
                <td class="align-middle row gap-1">
                    <a href="{{ path('app_admin_cat_delete', {'id' : categorie.id }) }}" class="btn btn-sm btn-danger"><i class="fa-solid fa-trash"></i></a>
                    <a href="{{ path('app_admin_cat_show', {'id': categorie.id}) }}"class="btn btn-sm btn-info"><i class="fa-solid fa-eye"></i></a>
                    <a href="{{ path('app_admin_cat_edit', {'id': categorie.id}) }}"class="btn btn-sm btn-warning"><i class="fa-solid fa-pen"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


</div>


{% endblock %}
