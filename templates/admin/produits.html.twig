{% extends 'base.html.twig' %}

{% block title %}BACKOFFICE{% endblock %} 

{% block body %}

<div class="container my-5">

        <h2 class="text-center text-white bg-primary mx-automy-2">Tous les produits enregistr√©s en base</h2>

        <div class="row justify-content-center">
            <a href="{{ path("app_admin_produits_ajouter") }}" class="btn btn-primary col-md-7 col-lg-5">Ajouter un produit</a>
        </div>

        <table class="table table-striped table-reponsive-sm col-md-7 col-lg-5 col-10">
            <thead class="">
                <tr class="text-center">
                    {% for col in colonnes %}

                        {% if col != 'id' %}

                        <th>{{col}}</th>

                        {% endif %}

                    {% endfor %}
                        <th>ACTION</th>
                </tr>
            </thead>
            <tbody>

                {% for produit in produits %}
                    <tr>
                        <td class="align-middle">{{produit.nom}}</td>
                        <td class="align-middle">{{produit.description}}</td>
                        <td class="align-middle">{{produit.prix}}</td>
                        <td class="align-middle"><img class="img-fluid" src="{{produit.image}}" alt="{{produit.nom}}"></td>
                        <td class="align-middle">{{produit.stock}}</td>
                        <td class="align-middle row gap-1">
                            <a href="{{ path('app_produits_editer', {'id' : produit.id }) }}" class="btn btn-sm btn-warning"><i class="fa-solid fa-pen"></i></a>
                            <a href="{{ path('app_produits_supp', {'id' : produit.id }) }}" class="btn btn-sm btn-danger"><i class="fa-solid fa-trash"></i></a>
                            <a href="{{ path('app_detail_produits', {'id' : produit.id }) }}" class="btn btn-sm btn-info"><i class="fa-solid fa-eye"></i></a>
                        </td>
                        
                    </tr>
                {% endfor %}
                
            </tbody>
        </table>
        

    </div>
{% endblock %}