{% extends 'base.html.twig' %}

{% block title %}Tous nos composants
{% endblock %}

{% block body %}


	<div class="album py-5 ">
		<div class="container">

			<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

				{% for produit in produits %}
					<div class="col">
						<div class="card shadow-sm">
						
							<img src="{{ produit.image }}" class="img-fluid" alt="{{ produit.nom }}">
							<h3 class="title text-center p-3">{{ produit.nom }}</h3>
							
							<div class="card-body">
								<p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
								<hr>
								<p class="text-center fs-2 fw-bold">{{ produit.prix }}â‚¬</p>
								<div class="d-flex justify-content-between align-items-center">
									<div class="btn-group gap-1">
										<a href="{{ path("app_detail_produits", {'id' : produit.id}) }}" class="btn btn-sm btn-outline-secondary">Voir</a>
										<button type="button" class="btn btn-sm btnsuccess">Ajouter</button>
										
									</div>
									<small class="text-muted  ps-2 fs-6">{{produit.categorie.nom}}</small>
								</div>
							</div>
						</div>
					</div>

				{% endfor %}
			</div>

		</div>

	</div>


{% endblock %}
